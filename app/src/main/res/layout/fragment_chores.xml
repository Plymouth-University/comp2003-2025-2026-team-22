<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/choresTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chores"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Actions header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Actions"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Suggested chores toggle -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchPrepopulate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enable suggested chores"
            android:checked="true" />

        <!-- Add chore button -->
        <Button
            android:id="@+id/btnAddChore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Add New Chore" />

        <!-- Assigned chores section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Assigned Chores"
            android:textStyle="bold"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choresRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/choresHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="No chores yet. Add one or enable suggested chores."
            android:textSize="13sp"
            android:textColor="#666666" />

    </LinearLayout>
</ScrollView>
